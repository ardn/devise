<h1> Index Page </h1>

	<h2> Listing all posts </h2>

	<%= link_to "My Blog", controller: "posts" %> | 
	<%= link_to "New post", new_post_path %> |
    <%= if test_user_signed_in? 

         link_to "Sign Out", destroy_test_user_session_path, :method => :delete 
       else 
         link_to "Sign In", new_test_user_session_path 
       end 
    %>
    
	<table>
		<tr>
			<th><div> <a href="#"> Title </a> </div></th>
			<th><div><a  href="#"> Text </a></div></th>
			<th> </th>
			<th> </th>
			<th></th>

		</tr>



			<% @posts.each do |post| %>
		<tr>
			<td class="link_post"> <a href="#" ><%= post.title %></a></td>


			<td> <%= post.text %> </td>
			<td> <%= link_to "Show", post_path(post) %></td> 
			

			<td><% if can? :update, post %> <%= link_to "Edit", edit_post_path(post) %></td>

			<% end %>

			
			<td><% if can? :destroy, post %> <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>

			<% end %>

		</tr>	

			<% end %>

			


			

	</table>



		

